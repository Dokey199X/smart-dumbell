<MyScreenManager>:
    LoginScreen:
        name: 'login'
    SignupScreen:
        name: 'signup'
    BottomNavigation:
        name: 'navigate'
    TrainingScreen:
        name: 'train'
    ToneupScreen:
        name: 'toneup'
    FemToneupScreen:
        name: 'femtoneup'
    MaleToneupScreen:
        name: 'maltoneup'
    BulkupScreen:
        name: 'bulkup'
    FemBulkupScreen:
        name: 'fembulkup'
    MaleBulkupScreen:
        name: 'malbulkup'
    WarmupScreen:
        name: 'warmup'
    FirstWorkoutScreen:
        name: 'workone'
    SecondWorkoutScreen:

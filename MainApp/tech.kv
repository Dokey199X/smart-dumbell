<BottomNavigation>:
    BoxLayout:
        orientation:'vertical'
        MDTopAppBar:
            title: 'Smart Dumbbell'
            md_bg_color: .2, .2, .2, 1
            specific_text_color: 1, 1, 1, 1
            left_action_items: [["menu", lambda x: app.callback()]]
            right_action_items: [["dots-vertical", lambda x: app.callback()]]

        MDBottomNavigation:
            panel_color: .2, .2, .2, 1

            MDBottomNavigationItem:
                name: 'HomeScreen'
                text: 'Home'
                icon: 'home'
                MDScreen:
                    Image:
                        source: "dumbbellbkg.png"
                        allow_stretch: True
                        keep_ratio: False
                    Button:
                        text: "LOG OUT"
                        size_hint: .25, None
                        height: "60dp"
                        pos_hint: {"left": 1 }
                        on_press:
                            root.manager.current = 'login'
                            root.manager.transition.direction = 'up'
            MDBottomNavigationItem:
                name: 'Bluetooth'
                text: 'Connect'
                font_size: root.height / 20
                icon: 'bluetooth'
                MDScreen:
                    MDLabel:
                        text:'Bluetooth'
                        font_style:"H2"
                        font_size: root.height / 20

            MDBottomNavigationItem:
                name: 'workout'
                text: 'Workout'
                font_size: root.height / 20
                icon: 'dumbbell'
                ScreenManager:
                    TrainingScreen:
                    ToneupScreen:
                    FemToneupScreen:
                    MaleToneupScreen:
                    BulkupScreen:
                    FemBulkupScreen:
                    MaleBulkupScreen:
                    WarmupScreen:
                    FirstWorkoutScreen:
                    SecondWorkoutScreen:
                    CongratulationsScreen:

            MDBottomNavigationItem:
                name: 'Record'
                text: 'Record'
                font_size: root.height / 20
                icon: 'chart-line'
                MDScreen:
                    MDLabel:
                        text:'Graph'
                        font_style:"H2"
                        font_size: root.height / 20

            MDBottomNavigationItem:
                name: 'Info'
                text: 'About'
                font_size: root.height / 20
                icon: 'information'
                MDScreen:
                    MDLabel:
                        text:'It is a workout application where we will guide the trainees especially the beginners'
                        pos_hint: {"center_y": .50}
                        halign: "center"
                        font_style:"H2"
                        font_size: root.height / 20

